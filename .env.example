# Database credentials — copy this file to .env and fill in real values
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=portfolio_db

# Revalidation — shared secret between CMS and portfolio for cache busting
REVALIDATION_SECRET=your_revalidation_secret

# CMS → Portfolio connection (used by CMS to trigger portfolio revalidation)
PORTFOLIO_URL=http://localhost:3000
